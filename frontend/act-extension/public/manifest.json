{
    "manifest_version": 3,
    "name": "ACT - mail extension",
    "version": "1.0.0",
    "description": "An AI assistant for your gmail that ACTs",
    "permissions": [
    "tabs",
    "activeTab"
    ],
    "host_permissions": [
      "https://*/*",
      "http://*/*",
      "https://mail.google.com/*"
    ],
    "action": {
      "default_popup": "index.html"
    },
    "background": {
    "service_worker": "background.js"
    },
    "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["assets/contentScript.js"]
    }]
  }